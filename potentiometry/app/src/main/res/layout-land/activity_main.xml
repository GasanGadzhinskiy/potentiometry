<?xml version="1.0" encoding="utf-8"?>

<TableLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="wrap_content"
android:layout_height="wrap_content">
//Шапка таблицы

<TableRow>

    <TextView
        android:id="@+id/volume_header"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="@string/volume"
        android:textColor="@color/colorText"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/delta_of_volume_header"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="@string/delta_of_volume"
        android:textColor="@color/colorText"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/edf_header"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="@string/edf"
        android:textColor="@color/colorText"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/delta_of_edf_header"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="@string/delta_of_edf"
        android:textColor="@color/colorText"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/first_production_header"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="@string/first_production"
        android:textColor="@color/colorText"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/second_production_header"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_gravity="fill"
        android:text="@string/second_production"
        android:textColor="@color/colorText"
        android:textSize="24sp" />

    <Button
        android:id="@+id/calculate_button"
        style="@style/styleOfButton"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:onClick="calculate_button_Click"
        android:text="@string/calculate_button_text"
        android:textColor="@color/colorText"
        android:textSize="20sp" />
</TableRow>

//Первая строка

<TableRow>

    <EditText
        android:id="@+id/volume1"
        android:layout_height="60dp"
        android:inputType="numberDecimal"
        android:textSize="20sp"
        tools:ignore="LabelFor" />

    <TextView
        android:layout_height="match_parent"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edf1"
        android:layout_height="match_parent"
        android:inputType="numberSigned"
        android:textSize="20sp"
        tools:ignore="LabelFor" />

    <TextView
        android:layout_height="match_parent"
        android:textSize="18sp" />

    <TextView
        android:layout_height="match_parent"
        android:textSize="18sp" />

    <TextView
        android:layout_height="match_parent"
        android:textSize="18sp" />

</TableRow>

